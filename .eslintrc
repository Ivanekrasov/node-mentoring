{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "xo/esnext",
    "./node_modules/xo/config/plugins.js"
  ],
  "rules": {
    "new-cap": "off",
    "capitalized-comments": "off",
		"curly": [2, "multi-line"],
		"camelcase": ["error", {
			"properties": "never"
		}],
		"no-process-exit": "warn",
		"unicorn/filename-case": [
			"warn",
			{
				"case": "camelCase"
			}
		],
		"import/no-unassigned-import": "off",
		"object-curly-spacing": ["error", "always", { "arraysInObjects": false }]
  }
}
